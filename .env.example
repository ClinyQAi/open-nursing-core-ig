# Application Settings
APP_ENV=production
LOG_LEVEL=info
LOG_FILE=/app/logs/nursing_validator.log

# Database Credentials
USE_DATABASE=true
DB_HOST=db
DB_PORT=5432
DB_NAME=nursing_validator
DB_USER=nursing_admin
DB_PASSWORD=your_secure_db_password
DB_POOL_MIN=2
DB_POOL_MAX=20

# Vector Database
VECTOR_DB_PATH=chroma_db_fons
LOCAL_DB_PATH=/tmp/chroma_db_fons_fast
EMBEDDING_MODEL=text-embedding-ada-002

# Azure OpenAI Credentials
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_api_key
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_DEPLOYMENT=your_deployment_name

# Initial User Credentials
# SECURITY NOTICE: Never commit real passwords to version control.
# These values are used to seed the database or for fallback auth.
ADMIN_PASSWORD=change_me_admin_secure
NURSE_PASSWORD=change_me_nurse_secure
CLINICIAN_PASSWORD=change_me_clinician_secure

# Streamlit Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
