# Production Environment Configuration Template
# Copy to .env and fill in your actual values

# ============================================
# AZURE OPENAI CONFIGURATION (REQUIRED)
# ============================================
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_API_VERSION=2024-01-15
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_ENV=production
APP_NAME=NHS Nursing Validator
LOG_LEVEL=info
DEBUG=false

# ============================================
# SECURITY SETTINGS
# ============================================
# For production, implement these:
# - Change default credentials
# - Use database for user management
# - Implement OAuth/Azure AD
# - Enable HTTPS
# - Use environment-based secrets

ENABLE_AUTHENTICATION=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_COOLDOWN_SECONDS=300

# ============================================
# DATABASE CONFIGURATION (Phase 2 - PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nursing_validator
DB_USER=nursing_admin
DB_PASSWORD=change_me_in_production
DB_POOL_MIN=2
DB_POOL_MAX=20
BACKUP_DIR=/app/backups
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# ============================================
# STORAGE CONFIGURATION
# ============================================
STORAGE_TYPE=local
# STORAGE_TYPE=azure  # For Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING=

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
# SENTRY_DSN=https://your-sentry-dsn
# DATADOG_API_KEY=
# NEW_RELIC_LICENSE_KEY=

# ============================================
# STREAMLIT SPECIFIC
# ============================================
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_CLIENT_SHOW_ERROR_DETAILS=false
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
